<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:isScrollContainer="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".AlarmDetailsActivity"
        >


        <TextView
            android:id="@+id/alarm_label_repeatWeekly"
            android:text="Repeat weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineaaaaaaaarlayout"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <View
            android:id="@+id/divider1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_repeatWeekly" />

        <CheckBox
            android:id="@+id/alarm_details_repeat_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_repeatWeekly"
            android:layout_alignBottom="@+id/alarm_label_repeatWeekly"
            android:layout_alignRight="@+id/divider1"
            android:checked="false"
            />

        <TextView
            android:id="@+id/alarm_label_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/divider1"
            android:text="Monday"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/alarm_label_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/alarm_label_monday"
            android:text="Tuesday"
            android:layout_below="@+id/alarm_label_monday"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/alarm_label_thursday"
            android:text="Thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_wednesday"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/alarm_label_friday"
            android:text="Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_thursday"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/alarm_label_saturday"
            android:text="Saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_friday"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/alarm_label_sunday"
            android:text="Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_saturday"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <View
            android:id="@+id/divider4"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm_label_sunday" />

        <CheckBox
            android:id="@+id/alarm_details_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_wednesday"
            android:layout_alignBottom="@+id/alarm_label_wednesday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <CheckBox
            android:id="@+id/alarm_details_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_sunday"
            android:layout_alignBottom="@+id/alarm_label_sunday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <CheckBox
            android:id="@+id/alarm_details_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_monday"
            android:layout_alignBottom="@+id/alarm_label_monday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <CheckBox
            android:id="@+id/alarm_details_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_tuesday"
            android:layout_alignBottom="@+id/alarm_label_tuesday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <TextView
            android:id="@+id/alarm_label_wednesday"
            android:text="Wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/alarm_label_tuesday"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <CheckBox
            android:id="@+id/alarm_details_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_thursday"
            android:layout_alignBottom="@+id/alarm_label_thursday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <CheckBox
            android:id="@+id/alarm_details_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_friday"
            android:layout_alignBottom="@+id/alarm_label_friday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <CheckBox
            android:id="@+id/alarm_details_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm_label_saturday"
            android:layout_alignBottom="@+id/alarm_label_saturday"
            android:layout_alignParentRight="true"
            android:checked="false" />

        <LinearLayout
            android:id="@+id/alarm_ringtone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/divider4"
            android:gravity="bottom">

            <TextView
                android:id="@+id/alarm_label_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="18sp" />

            <Button
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:text="Set Alarm"
                android:id="@+id/setAlarmButton"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/alarm_label_tone_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/alarm_ringtone_container" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/lineaaaaaaaarlayout"
            android:paddingBottom="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="5"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal">

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:headerBackground="#ff38384e"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>